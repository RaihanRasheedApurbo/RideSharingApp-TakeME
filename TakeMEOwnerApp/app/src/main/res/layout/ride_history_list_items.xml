<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/bg_waiting"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banani"
        android:id="@+id/ride_history_item_from"
        android:layout_marginLeft="50dp"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/ride_history_item_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ride_history_item_from"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="91dp"
        android:text="Uttara"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="To"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="58dp"
        />


    <TextView
        android:id="@+id/ride_history_item_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="223dp"
        android:layout_marginTop="38dp"
        android:text="12:06 - 20.07.2021" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="14dp"
        android:text="-\n-\n-\n-"
        android:textSize="20dp" />

    <Button
        android:id="@+id/ride_history_fare"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ride_history_item_from"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="34dp"
        android:text="BDT 200.00"
        android:textSize="17dp" />

    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@mipmap/circle"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="5dp"/>


    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="120dp"
        android:src="@mipmap/circle" />


</RelativeLayout>